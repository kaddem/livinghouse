extends ../layout/_layoutBase.pug


block content
  +page-header
    +e.logo
      +logo("#", "/img/logo.png", "Живой дом")
    +e.info
      .row
        +phone("+7 (812) 648-29-49", "tel:+78126482949", "+7 (812) 955-05-07", "tel:+78129550507")
        +main-nav
          +main-nav-item("--active", "#", "Каталог проектов")
          +main-nav-item("", "#", "Пиломатериалы")
          +main-nav-item("", "#", "Отзывы")
          +main-nav-item("", "#", "Контакты")


  +b.MAIN
    +b.SECTION.projects
      +e.inner
        +e.row
          +e.item
            +project-card("--red", "/img/house_one.jpg", "Проект загородного дома", "/img/chart.jpg", "Схема этажа")
          +e.item
            +project-card("--blue", "/img/house_one.jpg", "Проект загородного дома", "/img/chart.jpg", "Схема этажа")
          +e.item
            +project-card("--green", "/img/house_one.jpg", "Проект загородного дома", "/img/chart.jpg", "Схема этажа")
          +e.item
            +project-card("--orange", "/img/house_one.jpg", "Проект загородного дома", "/img/chart.jpg", "Схема этажа")
          +e.item
            +project-card("--magentic", "/img/house_one.jpg", "Проект загородного дома", "/img/chart.jpg", "Схема этажа")
          +e.item
            +project-card("--green", "/img/house_one.jpg", "Проект загородного дома", "/img/chart.jpg", "Схема этажа")

    +b.SECTION.steps
      +e.inner
        +e.H2.title Как получить дом, в котором хочется жить
        +e.UL.list
          +e.LI.item.--arrow
            +e.circle
              +e.SPAN.text Выбрать проект
          +e.LI.item.--arrow
            +e.circle
              +e.SPAN.text Выбрать планировку и комплектацию
          +e.LI.item.--arrow
            +e.circle
              +e.SPAN.text Доверить дело нам!
          +e.LI.item.--arrow
            +e.circle
              +e.SPAN.text Наблюдать
          +e.LI.item
            +e.circle
              +e.SPAN.text Войти в свой новый дом

    +b.SECTION.consult
      +e.inner
        +e.H2.title Нужна консультация?
        +e.P.text Звоните
          +e.A.phone(href="tel:+78126482949") +7 (812) 648-29-49
        +e.P.text Или отправьте заявку, мы вам перезвоним:
        +e.FORM.form
          +e.INPUT.input-tel(placeholder="+7 (___) ___-__-__")

  +page-footer
    +usefull
      +footer-nav
        +project-nav
        +usefull-nav
      +contacts("mailto:info@Lhspb.ru")
    +juristic
